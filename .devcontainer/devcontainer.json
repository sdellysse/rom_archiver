// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/rust-postgres
{
  "name": "rom_archiver",
  "dockerComposeFile": "compose.yaml",
  "service": "app",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "features": {
    // "ghcr.io/r3dpoint/devcontainer-features/tailwindcss-standalone-cli:1": {
    //   "version": "latest"
    // }
    // "ghcr.io/lee-orr/rusty-dev-containers/cargo-watch:0": {
    //   "version": "latest"
    // }
  },

  // Features to add to the dev container. More info: https://containers.dev/features.
  // "features": {},

  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  "forwardPorts": [3000, 5432],

  "customizations": {
    "vscode": {
      "extensions": [
        "fractalbrew.backticks",
        "heybourn.headwind",
        "bradlc.vscode-tailwindcss",
        "stivo.tailwind-fold",
        "esbenp.prettier-vscode",
        "yoavbls.pretty-ts-errors"
      ]
    }
  },

  // Use 'postCreateCommand' to run commands after the container is created.
  "postCreateCommand": "/usr/local/libexec/post-create-command"

  // Configure tool-specific properties.
  // "customizations": {},

  // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
  // "remoteUser": "root"
}
